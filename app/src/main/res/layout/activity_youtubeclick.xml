<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/webare" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="260dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="150dp"
            android:background="@drawable/textviewline"
            android:fontFamily="@font/maruburibold"
            android:gravity="center"
            android:text="WE BARE BARE"
            android:textAlignment="center"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="150dp"
            app:srcCompat="@drawable/speechless" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="260dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="55dp"
            android:layout_marginTop="438dp"
            android:background="@drawable/textviewline"
            android:fontFamily="@font/maruburibold"
            android:gravity="center"
            android:text="알라딘 - Speechless"
            android:textAlignment="center"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="300dp"
            app:srcCompat="@drawable/problem" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="260dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="150dp"
            android:layout_marginTop="300dp"
            android:background="@drawable/textviewline"
            android:fontFamily="@font/maruburibold"
            android:gravity="center"
            android:text="Ariana Grande - Problem"
            android:textAlignment="center"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="450dp"
            app:srcCompat="@drawable/fire" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="260dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="450dp"
            android:layout_marginStart="150dp"
            android:background="@drawable/textviewline"
            android:fontFamily="@font/maruburibold"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="20dp"
            android:text="LiSA - 불꽃(炎)" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="600dp"
            app:srcCompat="@drawable/lemon" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="260dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="600dp"
            android:layout_marginStart="150dp"
            android:background="@drawable/textviewline"
            android:fontFamily="@font/maruburibold"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="20dp"
            android:text="요네즈 켄시(米津玄師) - Lemon"/>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="750dp"
            app:srcCompat="@drawable/kinggnu" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="260dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="750dp"
            android:layout_marginStart="150dp"
            android:background="@drawable/textviewline"
            android:fontFamily="@font/maruburibold"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="20dp"
            android:text="King Gnu - 역몽(逆夢)"/>

    </RelativeLayout>
</ScrollView>
