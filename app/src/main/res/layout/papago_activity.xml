<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#33dd"
        android:orientation="horizontal">
        <EditText
            android:layout_weight="1"
            android:id="@+id/wantText"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColorHint="#555555"
            android:completionHint="검색어를 입력하세요"
            android:completionThreshold="1"/>
        <Button
            android:layout_weight="2"
            android:id="@+id/searchtrans"
            android:background="#3317C0E1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="번역"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">
        <TextView
            android:id="@+id/getState"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="현재 한글에서 번역됨."/>
        <ImageView
            android:id="@+id/ttsSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:src="@drawable/sound"/>
        <ImageView
            android:id="@+id/getimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/change"/>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/logo"
        android:padding="20dp">

        <TextView
            android:id="@+id/transText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="번역기입니다 !"
            android:textColor="#555555"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>